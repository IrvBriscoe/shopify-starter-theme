<div id="article" class="clearfix">
 <div class="page-title">
 	 <h2>{{ blog.title | link_to : blog.url }}</h2>
 </div>
 <div class="wrapper">
  <div class="blog-main clearfix">
  
    <div class="post-info">
      <div class="date">{{ article.created_at | date: "%m.%d" }}</div>
      <div class="comment-count"><a href="#comments">{% if article.comments.size > 0 %}{{ article.comments_count }}{% else %}&nbsp;{% endif %}</a></div>
    </div>
    <div class="article-body clearfix">
      <h2 class="post-title">{{ article.title }}</h2>
      <div class="content clearfix">
        {{ article.content }}
      </div>
      <div class="meta">
      {% if article.tags.size > 0 %}
      <strong>POSTED IN:</strong> {% for tag in article.tags %}<a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}{% endfor %}{% endif %}<br>
      {% include 'like-article' %}
     </div>
    </div> <!-- /.article-body -->
    {% if blog.comments_enabled? %}
		<div id="comments" class="comments">
	      {% if article.comments.size > 0 %}
	      <h3>{{ article.comments_count }}{{ article.comments_count | pluralize : 'Comment', 'Comments' }}</h3>
	      {% for comment in article.comments %}
	      <div id="comment-{{ comment.id }}" class="comment clearfix">
	        <div class="clearfix">
	          <div class="author">
	            <h5>{{ comment.author }}</h5>
	          </div>
	          <div class="gravatar">
	            <span class="email" style="display:none;">{{ comment.email }}</span>
	            <img src="" class="gravatar" alt="{{ comment.author }}" />
	          </div>
	        </div>
	        <div class="content">
	          {{ comment.content }}
	        </div>
	      </div> <!-- /.comment -->
	      {% endfor %}
	      {% endif %}
	      <div class="comment_form">
	        {% form article %}
	        <h3>LEAVE A COMMENT</h3>
	        <br>
	        {% if form.posted_successfully? %}
	        {% if blog.moderated? %}
	        <div class="notice success">
	          Your comment is awaiting moderation.
	        </div>
	        {% else %}
	        <div class="notice success">Successfully posted your comment.</div>
	        {% endif %}
	        {% endif %}
	
	        {% if form.errors %}
	        <div class="notice error">Not all the fields have been filled out correctly</div>
	        {% endif %}
	
	        <input type="text" id="comment_author" name="comment[author]" size="40" value="NAME" class="replace"{% if form.errors contains 'author' %} class="input-error"{% endif %} />
	        <input type="email" id="comment_email" name="comment[email]" size="40" value="EMAIL" class="replace"{% if form.errors contains 'email' %} class="input-error"{% endif %} />
	        <textarea id="comment_body" name="comment[body]" cols="40" rows="5" class="replace"{% if form.errors contains 'body' %} class="input-error"{% endif %}>{{form.body}}</textarea>
	
	        <input type="submit" value="Post comment" id="comment-submit" />
	
	        {% endform %}
	      </div> <!-- /#comments -->
	    </div> <!-- /div.comment_form -->
    {% endif %}
  </div> <!-- /.main -->
  
 
  <div class="blog-sidebar">
  {% include 'sidebar-blog' %}
  </div>
</div> <!-- /#article -->
</div>
{% include 'featured-products' %}