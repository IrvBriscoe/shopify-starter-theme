@import url('https://cloud.typography.com/710840/786662/css/fonts.css');

body,input,textarea {color:#222; font-size:11px; line-height:18px; font-family: Georgia, serif;letter-spacing: 0.1em;font-weight: normal; margin: 0; padding: 0;
}

body {background:#fff; }


h1,h2,h3,h4,h5,h6 { font-family: 'Tungsten A', 'Tungsten B'; font-weight: 500; font-style: normal; color:#222; margin:0 0 13px 0; text-transform:uppercase; letter-spacing: 0.1em;
}

h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {color:#222; }

a {color:#e1571e; text-decoration:none; outline:none;}
a:hover {text-decoration:none; color:#b63a07; }
a:active {outline:none;}

h1 {font-size:24px;}
h2 {font-size:16px;}
h3 {font-size:14px;}
h4, h4.active-customer {font-size:10px;font-family: 'MinervaModernBlack';font-weight: normal;letter-spacing: 1px;
}
h5 {font-size:12px;}
 .group h3, #email label{
 	border-bottom: 1px solid #222;
 	padding-bottom: 10px;
 }
label, #email label, .group h3 {
	font-size:10px;font-family: 'MinervaModernBlack';font-weight: 600;letter-spacing: 1px; color: #222;text-transform: uppercase;font-style: normal;
}
input[type=text],
input[type=email],
input[type=url],
input[type=tel],
input[type=password],
textarea {
	font-style: italic;
	font-size: 10px !important;
	padding: 3px 5px;
	width: 320px;
	border: 1px solid #d6d6d2;
}
#credit_card_verification_value {
	width: 50px;
}
#billing_address_province,
#shipping_address_province {
	width: 135px !important;
}
#marketing-box {
	padding: 30px 0;
}
input[type=submit], button, a.btn, #commit-button {
	border: none;
	padding: 7px 12px 5px 20px !important;
	outline:none; 
	color:#fff; 
	background:#222 url({{ 'caret-left.png' | asset_url }}) no-repeat left;
	font-family: 'Tungsten A', 'Tungsten B'; font-weight: 500 !important; font-style: normal;
	text-transform: uppercase;
	font-size: 16px;
	display: inline-block;
	position: relative;
	cursor: pointer;
}
input[type=submit]:hover, button:hover, a.btn:hover, #commit-button:hover {
	color: #26AE98;
}
placeholder {
	font-style: italic;
	font-weight: bold;
	color: #222;
}
input::-webkit-input-placeholder {
	color: #222;
	font-weight: bold;
	font-style: italic;
}
input:-moz-placeholder {
	color: #222;
	font-weight: bold;
	font-style: italic;
}
#header,
#container.slim #header {
	border-bottom: 2px solid #d6d6d2;
	background: #fff;
	width: 100%;
	padding: 2px 0;
}
#header h1, #footer, #buttons, #overview, #email, #addresses, .group, #content {background:#fff; border:none; padding:0; margin:0;}
#container, #container.slim {width: 100%; margin: 100px auto 0;}
#main,#container.slim #main {
	width: 1000px;
	background: #fff;
	margin: 0 auto;
}
span.sign-in-message,
#info-bar, #overview h2, label, #tagline .subtitle, #thumbs span, #footer, #shipping-same, #cancel-purchase, #steps, #tax_span, #thumbs h3 span {font-size:11px; font-weight:400; font-family:"Georgia", serif; text-transform:lowercase; font-style:italic; color:#999;}

.field-with-errors {color: #b63a07;
	background-color:#fff; border:1px solid #fff; padding: 0 0 5px;
}
.field-with-errors .error-message {font-size:12px; font-style: italic; padding: 0 0 5px; display: inline-block;
}
.field-with-errors input {
	border: 1px solid #b63a07;
}



#info-bar {
	overflow: hidden;
	background-repeat: no-repeat;
	background-position: center -20px;
	-webkit-background-size: cover;
	  -moz-background-size: cover;
	  -o-background-size: cover;
	  background-size: cover;
	padding-top: 100px;
	background-color: #FFF;
	background-image: url('{{ 'bg-header.jpg' | file_url }}');
	border-bottom: 30px solid #222;
	width: 100%;
}
#footer,#container.slim #footer {
	width: 100%;
	height: 150px;
	margin-top: 50px;
	padding: 0;
	overflow: hidden;
	background-repeat: no-repeat;
	background-position: center top;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	margin-bottom: 0;
	background-color: #FFF;
	background-image: url('{{ 'bg-footer.jpg' | file_url }}');
	font-size: 11px;
	color: white;
	text-align: center;
	position: relative;
}
#footer #shop-policies {
	height: 42px;
	padding-top: 8px;
	background: #222;
}
#footer #shop-policies a {
	color: white;
}
#footer #shop-policies a:hover {
	color: #888;
}
#footer p {
	font-size: 11px;
	color: white;
	text-align: center;
	position: relative;
	bottom: 32px;
	z-index: 100;
}

#logo { width: 1000px; margin: 0 auto;
	display:block; padding:45px 0 6px; background:url('{{ 'logo.png' | asset_url }}') no-repeat 0px 43px; height:48px;}

#overview {padding-bottom:32px;}
#overview h2 {font-size:13px; display:none;}

#cost {color:#333; font-size:42px;}
#cost, #order-num {text-shadow:none !important;}
#steps {font-size:13px;}

#products {width:763px; padding-right:20px; border-right:none;}

#wallet {background-color:#fff !important;} /* disable wallet highlight */
#overview .hint, #tax_span {color:#666; font-size:13px;}

#thumbs div {padding:0; width:auto; margin-right:10px;border: none;
}
#thumbs h3 {margin-bottom:0px; margin-right:10px; border-bottom:none; font-weight:700; text-transform:none; color:#666;}
#thumbs .plist-variant-title {margin-right:6px;}

.slim #overview {padding-bottom:0;}
.slim #thumbs td {width:100%; display:block; clear:both; padding-top:10px;}
.slim #thumbs img {display:block; float:left; padding:3px;}
.slim #thumbs h3 {display:block; float:left; padding-top:10px; margin-left:10px;}

#addresses {padding:32px 0;}

#container.slim #content .group p:first-child {padding:10px 0;}

.gleft {width:350px;}
.gright {margin-left:350px; width:350px; padding-left:20px;}

.form {padding:5px;}
.form tr td {display:block; padding:3px 0;}
.form tr td.lbl {padding-left:4px; width:auto;}
.form td input[type=text] {width:320px !important;}

#shipping-same {background:#fcfcfc; padding:20px;}


/* css borders - in one spot to change easily */

.pgroup h3, #thumbs h3, #container.slim #content .group p:first-child,#tagline .subtitle, #container.slim #content .group p:first-child, #thumbs img, #thumbs div {border: none !important; }
#shipping-same {border:1px solid #d6d6d2;}
#wallet {border-left:1px solid #d6d6d2;margin-left: 763px;
padding: 5px 10px 10px 10px;
text-align: center;
width: 210px;}

#cost {color:#222;}
#shipping-same, #thumbs div, .slim #thumbs img {border:1px solid #d6d6d2;}
#wallet {border-left:1px solid #d6d6d2;}

#tagline,
#info-bar img,
#info-bar span,
#thumbs br {
	display:none;
}
.slim #overview {
	text-align: center;
	font-size: 12px;
}
.slim #overview #thumbs,
.slim #content {
	margin: 20px auto 0;
	width: 300px;
	text-align: center;
	font-size: 11px;
	font-style: italic;
}