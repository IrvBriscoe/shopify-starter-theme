	border-bottom: 1px solid #444;
	margin-bottom: 12px;
}
.post-title {
	text-align: center;
	padding-bottom: 18px;
	border-bottom: 1px solid #444;
}
#blog .article .content p, #article .content p {margin-bottom:1.5em;}
#article .back {font-size:11px; color:#c0c0c0;}
.meta {
	text-align: center;
	font-size: 11px;
}
.meta .btn {
	background: #f5f5f5;
	color: #444 !important;
}
#comments {
	clear: both;
}
.date,
.comment-count a {
	font-weight: 600;
	color: #444;
	font-size: 11px;
}
.date {
	background: url({{ 'date.png' | asset_url }}) no-repeat;
	padding: 14px 0;
	text-align: center;
	margin-bottom: 16px;
}
.comment-count a {
	background: url({{ 'bubble.png' | asset_url }}) no-repeat;
	display: block;
	width: 50px;
	height: 50px;
	padding: 10px 0;
	text-align: center;
}
.comment-count a:hover {
	opacity: 0.7;
}
#article .comments .comment {padding:16px; margin-bottom:30px; border-top: 1px solid #444;
	border-bottom: 1px solid #444;
}
#article .comments .comment .author {float:left; height:25px; line-height:25px; font-size:13px; color:#000;}
#article .comments .comment .gravatar {float:right; display:none;}
.comment_form {
	width: 415px;
	padding-top: 36px;
	clear: both;
}
#article .comment_form input[type=text],#article .comment_form input[type=email], #article .comment_form textarea {display:block; margin-bottom:10px; width:100%; border:1px solid #444; padding:5px 10px; font-size: 11px;
}

.blog-sidebar h3 {
	padding: 12px 15px;
	border: 1px solid #444;
	display: block;
	text-align: center;
	width: 140px;
	margin: 0 auto 20px;
}
.sidebar-widget {
	padding-bottom: 30px;
	margin-bottom: 30px;
	border-bottom: 1px solid #444;
	font-size: 11px;
}
.blog-sidebar #search_form {
	position: relative;
	left: 0;
	top: 0;
	width: 172px;
	padding-bottom: 30px;
}
.blog-sidebar #search_form input[type=text] {
	width: 154px;
	border-bottom: 1px solid #444;
	text-transform: uppercase;
}
.blog-sidebar .replace {
	color: #999 !important;
}
.sidebar-widget ul {
	list-style: none;
	text-align: center;
	margin: 0;
}
.sidebar-widget ul li {
	list-style: none;
}
.sidebar-widget ul li a {
	color: #444;
	font-weight: 500;
}
.sidebar-widget ul li a:hover {
	color: #8cc63e;
}
.sidebar-widget.opt-in input[type=email] {
	border: none;
	border-bottom: 1px solid #444;
	padding: 2px 5px 2px 0;
	font-size: 10px;
	width: 130px;
}
.sidebar-widget.opt-in input[type=submit] {
	border: 1px solid #444;
	padding: 2px 7px;
	font-size: 10px;
}

/* search */
#search .highlight {background:#999; color:#000; padding:2px 4px;}
#search .results .item {padding:16px 0; border-bottom: 1px solid #999;
}
#search .results .item:last-child {border-bottom:none;}
#search .results .item h3 {margin:0;}
#search .results .item .thumbnail {float:left; padding:3px; margin-left: 16px; width:50px; text-align:center; margin-right:16px;}
#search .results .item .thumbnail a, #search .results .item .thumbnail img {display:block; margin:0 auto; padding:0;}
#search .results .item .content {float:left; width:500px;}
#search .results .item .content.indented {
	margin-left: 16px;
}
/* 404 */
#not_found {padding:100px 0 160px 0; text-align:center;}
#not_found h2 span {color:#aaa;}

/* cloud zoom */
.cloud-zoom-lens {background-color:#fff;}
.cloud-zoom-title { position:absolute !important; background-color:#000; color:#fff; padding:3px; width:100%; text-align:center; font-weight:bold; font-size:10px; top:0px;}
.cloud-zoom-big {overflow:hidden;}
.cloud-zoom-loading {color:white; background:#222; padding:3px; border:1px solid #000;}


/* css borders - in one spot to change easily */

.more-info {border-bottom: 1px solid #444;}
#product .images .image, #cart .product_image img, #search .results .item .thumbnail {border:1px solid #444;}

.additional-info { margin-bottom:40px; text-align:center; font-size:12px; color: #999; float: right; text-align: right; line-height: 18px;
}
.social-links {
	padding-bottom: 18px;
}
.social-links a {
	display: inline-block;
	vertical-align: top;
}
.social a:hover,
.social-links a:hover {
	opacity: 0.7;
}
.additional-info a {
	color: #999;font-weight: normal;text-transform: none;
}
.aeolidia {
	position: relative;
	left: 10px;
}
#admin_header {
	text-align: center;
}
.action_bottom { margin-top:20px; }
#customer label, #recover-password label { display:block; }
#customer input[type=email], #recover-password input[type=email], #customer input[type=password], #recover-password input[type=password], #customer input[type=text], #recover-password input[type=text] { display:block; padding:3px; width:300px; }
#guest, #customer_sidebar, #order_address { margin:20px 0; float:left; width:260px; }
#customer_orders, #order_details { margin:20px 0; float:right; width:600px; } 
#order_payment, #order_shipping { margin-bottom:20px; }
#address_tables td, #address_tables label, #address_tables input[type=text], #address_tables input[type=email] { display:block; margin:0; }
.edit_address { margin-bottom:20px; }
#address_tables tr, #address_tables tr td { padding:0px; border:none; }
#address_tables {
	text-align: center;
}
.address_table {
	display: inline-block;
	vertical-align: top;
	margin: 15px;
	text-align: left;
}
.errors { color: #C00 }

/* Using captions rather than tooltips */
#content-table .product:hover .image img,
.content-table .product:hover .image img {
	opacity: 0.7;
}
#content-table .product .caption,
.content-table .product .caption  {
	display: block;
	padding: 18px 10px;
}
#content-table .product .caption h3,
.content-table .product .caption h3 {
	margin: 0;
}
#content-table .product .caption .price,
.content-table .product .caption .price  {
	color: #999;
	font-size: 11px;
}
#content-table .product .caption ul li,
.content-table .product .caption ul li {
	list-style: none;
	display: inline-block;
	padding: 8px 0;
}
#content-table .product .caption .sale,
#content-table .product .caption .soldout,
.content-table .product .caption .sale,
.content-table .product .caption .soldout  {
color: #f16031;
}

.top {
	text-indent: -9999em;
	background: url({{ 'top.png' | asset_url }}) no-repeat;
	width: 79px;
	height: 48px;
	display: block;
	position: fixed;
	right: 20px;
	bottom: 250px;
	display: none;
	opacity: 0.8;
}
.top:hover {
	opacity: 1;
}
/* Additional CSS fixes */

#slider { margin-bottom: 0 }


.sbHolder{
	background-color: #FFF;
	border: solid 1px #444;
	font-size: 11px;
	font-weight: normal;
	height: 30px;
	position: relative;
	width: 200px;
}
.sbHolder:focus .sbSelector{
	
}
.sbSelector{
	display: block;
	height: 30px;
	left: 0;
	line-height: 30px;
	outline: none;
	overflow: hidden;
	position: absolute;
	text-indent: 10px;
	top: 0;
	width: 170px;
}
.sbSelector:link, .sbSelector:visited, .sbSelector:hover{
	color: #444;
	outline: none;
	text-decoration: none;
}
.sbToggle{
	background: url({{ 'select-icons.png' | asset_url}}) 0 -116px no-repeat;
	display: block;
	height: 30px;
	outline: none;
	position: absolute;
	right: 0;
	top: 0;
	width: 30px;
}
.sbToggle:hover{
	background: url({{ 'select-icons.png' | asset_url}}) 0 -167px no-repeat;
}
.sbToggleOpen{
	background: url({{ 'select-icons.png' | asset_url}}) 0 -16px no-repeat;
}
.sbToggleOpen:hover{
	background: url({{ 'select-icons.png' | asset_url}}) 0 -66px no-repeat;
}
.sbHolderDisabled{
	background-color: #FFF;
	border: solid 1px #444;
}
.sbHolderDisabled .sbHolder{
	
}
.sbHolderDisabled .sbToggle{
	
}
.sbOptions{
	background-color: #FFF;
	border: solid 1px #444;
	list-style: none;
	left: -1px;
	margin: 0;
	padding: 0;
	position: absolute;
	top: 30px;
	width: 200px;
	z-index: 1;
	overflow-y: auto;
	padding: 3px 0;
}
.sbOptions li{
	list-style: none;
}
.sbOptions a{
	display: block;
	outline: none;
	padding: 3px 0 0 10px;
}
.sbOptions a:link, .sbOptions a:visited{
	color: #444;
	text-decoration: none;
}
.sbOptions a:hover,
.sbOptions a:focus,
.sbOptions a.sbFocus{
	color: #8cc63e;
}
.sbOptions li.last a{
	border-bottom: none;
}
.sbOptions .sbDisabled{
	color: #999;
	display: block;
	padding: 7px 0 7px 3px;
}
.sbOptions .sbGroup{
	color: #444;
	display: block;
	font-weight: bold;
	padding: 7px 0 7px 3px;
}
.sbOptions .sbSub{
	padding-left: 17px;
}